import math
#imports math module, must include in code at start to run each time
print("This program calculates the area and circumference of a circle")

radius = float(input("Please enter the radius:"))
area = math.pi * (radius ** 2)
circ = 2 * math.pi * radius
#math.pi is the variable for pi on the module 

print("Area:", round(area,2))
print("Circumference:", round(circ,2))
